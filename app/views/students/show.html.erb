<h1><%= @student.name %><h1> <h2>Result Card </h2>
	   
	   <% flag = 0 %>

      <% @recordemail.each do |r| %>
             <% if r.eql?(@student.email) %>
                    <% flag = 1 %>
                  <% end %>
      <% end %> 

    <% if flag == 1 %>
            <center>
	   		<table border="1" >	
				<tr>
        			<td>Name:</td>  <td><%= @record.name %></td>
   				 </tr>
    			<tr>
    				<td>Email:</td> <td><%= @record.email %></td>
				</tr>
				<tr>
	    			<td>Maths Number:</td><td><%= @record.mathno%></td>
				</tr>
				<tr>
					<td>Physics Number:</td><td><%= @record.physicsno%></td>
				</tr>
				<tr>
					<td>Chemistry Number:</td><td><%= @record.chemistryno %></td>
				</tr>
				<tr>
					<td>Total Number:</td> <td><%= @record.mathno+@record.physicsno+@record.chemistryno %></td>
				</tr>
			</table>

			<h2><%= link_to "All Student Result Card", resultcard_path, method:"get" %></h2>

	<% else %>
		<h2> Record is not in database. Contact Your Admin To Enter Your Result </h2>
	<% end %>
			</center>


	

